<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<GridPane alignment="CENTER" hgap="5.0" minHeight="500.0" minWidth="600.0" vgap="5.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="takeiteasy.GUI.Controller.LocalMatchCtrl">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" maxWidth="420.0" minWidth="420.0" prefWidth="420.0" />
      <ColumnConstraints hgrow="SOMETIMES" maxWidth="165.0" minWidth="100.0" prefWidth="162.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="420.0" prefHeight="420.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <HBox alignment="CENTER" GridPane.columnIndex="1">
      <Button fx:id="btn_backToLobby" mnemonicParsing="false" text="Lobby"/>
      <Button fx:id="btn_backToMenu" mnemonicParsing="false" text="Menu"/>
   </HBox>
   <GridPane>
      <columnConstraints>
         <ColumnConstraints hgrow="SOMETIMES" />
         <ColumnConstraints hgrow="SOMETIMES" />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints vgrow="SOMETIMES" />
         <RowConstraints vgrow="SOMETIMES" />
      </rowConstraints>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="PLAYER:" />
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="STATUS:" GridPane.rowIndex="1" />
      <Text fx:id="text_playerName" strokeType="OUTSIDE" strokeWidth="0.0" text="PlayerNameWITHmanychars" GridPane.columnIndex="1" />
      <Text fx:id="text_playerStatus" strokeType="OUTSIDE" strokeWidth="0.0" text="Placing (1,2,3)" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   </GridPane>
      <VBox alignment="CENTER" prefHeight="420.0" prefWidth="420.0" GridPane.rowIndex="1">
         <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
            <Pane fx:id="pane_boardPane" />
         </HBox>
         <HBox alignment="CENTER" >
            <Button fx:id="btn_placeTile" HBox.hgrow="ALWAYS" mnemonicParsing="false" prefHeight="50.0" prefWidth="180.0" text="PLACE TILE" textAlignment="CENTER" />
            <Pane fx:id="pane_currentTile" />
         </HBox>
      </VBox>
   <Text fx:id="text_matchStatus" strokeType="OUTSIDE" strokeWidth="0.0" text="Players are waiting for the game to start" textAlignment="CENTER" textOrigin="CENTER" GridPane.rowIndex="2" />
   <ScrollPane fx:id="pane_playersPane" GridPane.columnIndex="1" GridPane.rowIndex="1">
      <VBox fx:id="layout_playersPane" prefWidth="150.0" />
   </ScrollPane>
</GridPane>
