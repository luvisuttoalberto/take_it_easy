<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.shape.Rectangle?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="takeiteasy.GUI.Controller.MainMenuCtrl">
   <AnchorPane>
   <VBox layoutX="250.0" layoutY="86.0" prefHeight="220.0" prefWidth="100.0">
      <Button id="start" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
              onAction="#onStartLocalMatchRelease" prefWidth="100.0" text="Start" textAlignment="CENTER">
         <VBox.margin>
            <Insets bottom="10.0" top="10.0"/>
         </VBox.margin>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
         </padding>
      </Button>
      <Button id="btn_showCredits" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
              onAction="#onShowCreditsRelease" prefWidth="100.0" text="Credits" textAlignment="CENTER">
         <VBox.margin>
            <Insets bottom="10.0" top="10.0"/>
         </VBox.margin>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
         </padding>
      </Button>
      <Button id="exit" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onExitGameRelease"
              prefWidth="100.0" text="Exit" textAlignment="CENTER">
         <VBox.margin>
            <Insets bottom="10.0" top="10.0"/>
         </VBox.margin>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
         </padding>
         <opaqueInsets>
            <Insets/>
         </opaqueInsets>
      </Button>
   </VBox>
   </AnchorPane>
   <AnchorPane fx:id="creditsPane" visible="false">
      <Rectangle fill="#ffffffff" height="400.0" width="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" />
      <Label alignment="CENTER" layoutX="225.0" layoutY="33.0" prefHeight="50.0" prefWidth="150.0" text="Take it EASY!">
         <font>
            <Font size="19.0"/>
         </font>
      </Label>
      <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="200.0" layoutY="83.0" pickOnBounds="true"
                 preserveRatio="true">
         <Image url="@../images/group.jpg"/>
      </ImageView>
      <Label alignment="CENTER" layoutX="225.0" layoutY="200.0" prefHeight="34.0" prefWidth="150.0"
             text="Developed By:"/>
      <Label alignment="CENTER" layoutX="225.0" layoutY="234.0" prefHeight="20.0" prefWidth="150.0" text="Alberto"/>
      <Label alignment="CENTER" layoutX="225.0" layoutY="258.0" prefHeight="20.0" prefWidth="150.0" text="Azad"/>
      <Label alignment="CENTER" layoutX="225.0" layoutY="282.0" prefHeight="20.0" prefWidth="150.0" text="Michele"/>
      <Label alignment="CENTER" layoutX="225.0" layoutY="306.0" prefHeight="20.0" prefWidth="150.0" text="Nicolas"/>
      <Button id="btn_closeCredits" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
              onAction="#onCloseCreditsRelease" prefWidth="100.0" text="Back" textAlignment="CENTER"/>
   </AnchorPane>
</AnchorPane>
